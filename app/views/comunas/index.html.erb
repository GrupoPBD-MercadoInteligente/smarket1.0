<h1>Listing comunas</h1>

<table>
  <thead>
    <tr>
      <th>Comuna</th>
      <th>Provincia</th>
      <th>Comuna nombre</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comunas.each do |comuna| %>
      <tr>
        <td><%= comuna.comuna %></td>
        <td><%= comuna.provincia %></td>
        <td><%= comuna.comuna_nombre %></td>
        <td><%= link_to 'Show', comuna %></td>
        <td><%= link_to 'Edit', edit_comuna_path(comuna) %></td>
        <td><%= link_to 'Destroy', comuna, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

